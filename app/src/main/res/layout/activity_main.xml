<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sr.unasat.rest.MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="366dp"
        android:layout_height="360dp"
        android:layout_marginBottom="98dp"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchCountryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Country"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="53dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/searchCountryName"
        android:text="Search"
        android:onClick="searchCountry"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="53dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text"
        android:layout_alignTop="@+id/text"
        android:layout_marginTop="16dp"
        android:text="Name" />

    <TextView
        android:id="@+id/countryNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginEnd="37dp"
        android:layout_toStartOf="@+id/button"
        android:text="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text"
        android:layout_alignTop="@+id/text"
        android:layout_marginTop="50dp"
        android:text="Capital" />

    <TextView
        android:id="@+id/countryCapitalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginEnd="37dp"
        android:layout_toStartOf="@+id/button"
        android:text="" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text"
        android:layout_alignTop="@+id/text"
        android:layout_marginTop="90dp"
        android:text="Region" />

    <TextView
        android:id="@+id/countryRegionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginEnd="37dp"
        android:layout_toStartOf="@+id/button"
        android:text="" />

</RelativeLayout>
